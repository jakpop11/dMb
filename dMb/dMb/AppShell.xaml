<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:view="clr-namespace:dMb.Views"
       Title="dMb"
       x:Class="dMb.AppShell">

    <FlyoutItem Title="Browse" >
        <ShellContent Route="MoviesPage" ContentTemplate="{DataTemplate view:MoviesPage}" />
    </FlyoutItem>
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" >
        <ShellContent Title="Settings" Route="SettingsPage" ContentTemplate="{DataTemplate view:SettingsPage}" />
        <ShellContent Title="About" Route="AboutPage" ContentTemplate="{DataTemplate view:AboutPage}" />
    </FlyoutItem>
    
    <!--TEMP-->
    <FlyoutItem Title="DEBUG" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Select Db" Route="SelectDbPage" ContentTemplate="{DataTemplate view:SelectDbPage}" />
        <ShellContent Title="Detail Page" Route="MovieDetailPage" ContentTemplate="{DataTemplate view:MovieDetailPage}" />
    </FlyoutItem>

</Shell>
